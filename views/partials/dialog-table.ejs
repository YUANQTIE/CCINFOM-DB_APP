<dialog 
  id="<%= dialogId %>" 
  class="dialog w-full sm:max-w-[425px] max-h-[612px] rounded-md m-auto"
  onclick="if (event.target === this) this.close()">

  <div class="relative grid gap-4 p-6">
    <button
      type="button"
      aria-label="Close dialog"
      onclick="this.closest('dialog').close()"
      class="absolute top-4 right-2.5 text-gray-500 hover:text-gray-800"
    >
      <i data-lucide="x" class="h-4.5"></i>
    </button>

    <header>
      <h2 class="font-semibold text-lg"><%= title %></h2>
      <p class="text-sm text-gray-500"><%= description %></p>
    </header>

    <section 
      id="<%= containerId %>"
      class="max-h-80 overflow-y-auto"
    >
    </section>

    <footer class="flex justify-end mt-4">
      <button class="btn-outline" onclick="this.closest('dialog').close()">Close</button>
    </footer>
  </div>

</dialog>
