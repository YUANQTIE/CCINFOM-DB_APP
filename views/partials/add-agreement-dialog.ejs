    <div class="grid gap-2">
        <label for="water-holding-input">Water Holding Capacity (%)</label>
        <input
        class="w-full"
        type="text"
        id="water-holding-input"
        placeholder="e.g., 99.99"
        name="water_holding_capacity"
        />
