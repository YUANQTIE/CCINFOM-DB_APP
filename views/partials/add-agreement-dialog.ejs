<div class="grid gap-6 mb-4 grid-cols-1 md:grid-cols-2 md:w-fit">
    <div class="grid gap-2">
        <label for="start-input">*Start Date</label>
        <input
            class="w-full"
            type="date"
            id="start-input"
            name="contract_start"
            required
        />
    </div>

    <div class="grid gap-2">
        <label for="end-input">*End Date</label>
        <input
            class="w-full"
            type="date"
            id="end-input"
            name="contract_end"
            **required**
        />
    </div>

    <div class="grid gap-2">
        <label for="pricing-input">*Pricing</label>
        <input
        class="w-full"
        type="text"
        id="pricing-input"
        placeholder="e.g., 999.99"
        name="client_pricing"
        **required**
        />
    </div>

    <div class="grid gap-2">
        <label for="week-input">*Week of Delivery</label>
        <input
        class="w-full"
        type="text"
        id="week-input"
        placeholder="e.g., 3"
        name="week_of_delivery"
        **required**
        />
    </div>

