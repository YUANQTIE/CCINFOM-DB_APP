<div class="grid gap-6 mb-4 grid-cols-1 md:grid-cols-2 md:w-fit">

    <div class="grid gap-2">
        <label for="medical-select">Medical Condition</label>
        <input
        class="w-full"
        type="text"
        id="medical-select"
        placeholder="e.g., Philippines"
        name="country_of_origin"
        **required**
        />
    </div>

    <div class="grid gap-2">
        <label for="vac-select">Vaccination Status</label>
        <select class="w-full" id="vac-select" name="vaccination_status" **required**>
        <option value="" disabled selected>Select a location...</option>
        <option value="Vaccinated">Vaccinated</option>
        <option value="Not Vaccinated">Not Vaccinated</option>
        <option value="Pending">Pending</option>
        </select>
    </div>

</div>