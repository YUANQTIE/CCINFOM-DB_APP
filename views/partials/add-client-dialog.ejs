<div class="grid gap-6 mb-4 grid-cols-1 md:grid-cols-2 md:w-fit">

  <div class="grid gap-2">
    <label for="client-input">Client Name</label>
    <input
      class="w-full"
      type="text"
      id="client-input"
      placeholder="e.g., Juan Dela Cruz"
      name="client_name"
      **required**
    />
  </div>

  <div class="grid gap-2">
    <label for="restaurant-name-input">Restaurant Name</label>
    <input
      class="w-full"
      type="text"
      id="restaurant-name-input"
      placeholder="e.g., Wolfgang"
      name="restaurant_name"
      **required**
    />
  </div>

  <div class="grid gap-2">
    <label for="type-input">Restaurant Type</label>
    <input
      class="w-full"
      type="text"
      id="type-input"
      placeholder="e.g., Fine Dining"
      name="restaurant_type"
      **required**
    />
  </div>

  <div class="grid gap-2">
    <label for="address-input">Restaurant Address</label>
    <input
      class="w-full"
      type="text"
      id="address-input"
      placeholder="e.g., 2401 Taft Avenue, Manila 1004, Philippines"
      name="restaurant_address"
      **required**
    />
  </div>
  
  <div class="grid gap-2">
    <label for="number-input">Contact No.</label>
    <input
      class="w-full"
      type="text"
      id="number-input"
      placeholder="e.g., 09284629463"
      name="contact_no"
      **required**
    />
  </div>

  <div class="grid gap-2">
    <label for="email-input">Email Address</label>
    <input
      class="w-full"
      type="text"
      id="email-input"
      placeholder="e.g., juan_cruz@gmail.com"
      name="email_address"
      **required**
    />
  </div>

  <div class="grid gap-2">
    <label for="year-input">Year of Establishment</label>
    <input
      class="w-full"
      type="text"
      id="year-input"
      placeholder="e.g., 2005"
      name="year_of_establishment"
      **required**
    />
  </div>

</div>
