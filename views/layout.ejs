  </head>
  <body class="h-full font-sans text-foreground bg-background">
    <div class="flex flex-col h-screen">
      <%- body %> <%- include('partials/footer') %>
    </div>
    <!-- Development version -->
    <script src="https://unpkg.com/lucide@latest/dist/umd/lucide.js"></script>

    <!-- Production version -->
    <script src="https://unpkg.com/lucide@latest"></script>
    <script>
      lucide.createIcons();
    </script>
    <script lang="ts">
      // restore nav state
      const handleNavState = () => {
        const navMenuId = sessionStorage.getItem("expandedNavMenuId");
        if (navMenuId) {
          const navMenuDoc = document.getElementById(navMenuId);
          const button = document.querySelector(
            `[data-target="#${navMenuId}"]`
          );

          if (navMenuDoc) {
            navMenuDoc.classList.add("expanded");
            button?.classList.add("active");
          }
        }
      };

      // listen to state
    </script>
  </body>
</html>
