<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Carnivault - Inventory</title>
  <script src="https://cdn.jsdelivr.net/npm/date-fns@3/cdn.min.js"></script>
</head>

<body>
  <div class="flex flex-1">
    <%- include("../partials/sidebar") %>
      <main class="flex-1 p-10 overflow-y-auto bg-background">
        <div class="flex gap-4">
          <h1 class="text-2xl font-bold text-foreground mb-6 tracking-tight">
            Inventory
          </h1>
        </div>
        <section class="flex flex-col gap-4">
          <section class="flex justify-between">
            <!-- prettier-ignore -->
            <%- include("../partials/searchbar", { label: "Inventory" , select_id: "searchbarSelect" ,
              input_id: "searchbarInput" , placeholder: "Search inventory..." , route_api: "meat-selection" }) %>
              <a href="/reports/inventory-keeping" class="btn-outline">
                <i data-lucide="bar-chart-2"></i>
                View Reports
              </a>
          </section>
          <div class="overflow-x-auto">
            <%- include("../partials/table-skeleton", { id: "table-skeleton" }) %> <%- include("../partials/table", {
                id: "inventory-table" }) %>
            <%- include('../partials/dialog', { 
              dialogId: 'edit-meat-selection-dialog' , 
              title: 'Edit Meat Selection' ,
              description: 'Edit Meat Selection' , 
              formId: 'edit-meat-selection-form' , 
              formAction: '' ,
              formMethod: 'PUT' , 
              submitText: 'Update' , 
              formFieldsPartial: '../partials/edit-meat-selection-dialog' }) %>
          
          </div>
          <!-- prettier-ignore -->
          <%- include("../partials/table-data-zero", { id: "table-data-zero" ,
            description: "Inventory data not available..." }) %>
        </section>
      </main>
  </div>
  <script src="/scripts/components/table.js" defer></script>
  <script src="/scripts/components/searchbar.js" defer></script>
  <script>
    document.addEventListener("DOMContentLoaded", async () => {
      const tableColumns = [
        "Serial No.",
        "Cut Type",
        "Weight",
        "Expiry Date",
        "Storage Location",
        "Quality Control Clearance",
        "Status",
        "Origin Livestock ID",
      ];

      const buttons = {
        editBtn: {
          action: (event, rowData, rowIndex) => {
            console.log("Edit", rowData);
            const dialog = document.getElementById('edit-meat-selection-dialog');
            const form = document.getElementById('edit-meat-selection-form');

            form.action = `/api/meat-selection/${rowData.serial_no}/location`;

            dialog.showModal();
          },
          icon: lucide.icons.Pencil,
        },
        addNutritionBtn: {
            action: async (event, rowData, rowIndex) => {
              console.log("Add nutrition", rowData)
            },
            label: "Process",
            condition: (rowData) => rowData.quality_control_clearance === "Pending",
        },
        viewNutritionBtn: {
            action: async (event, rowData, rowIndex) => {
              console.log("View nutrition", rowData)
            },
            label: "Process",
            condition: (rowData) => rowData.quality_control_clearance === "Approved",
        },
      };

      initTable(
        tableColumns,
        "inventory-table",
        "table-skeleton",
        "table-data-zero",
        "meat-selection",
        buttons
      );

      // Init Search Bar
      initSearchBar(
        "searchbarSelect",
        "searchbarInput",
        "inventory-table",
        "meat-selection",
        tableColumns,
        buttons
      );

      document.getElementById('edit-meat-selection-form').addEventListener('submit', async (e) => {
        e.preventDefault();
        const form = e.target;
        const formData = new FormData(form);
        const payload = Object.fromEntries(formData);
        try {
          const response = await fetch(form.action, {
            method: 'PUT',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify(payload),
          });

          if (!response.ok) throw new Error('Failed to update meat selection');
          form.closest('dialog').close();
          window.location.reload();
        } catch (err) {
          console.error(err);
          alert('Error updating meat selection.');
        }
      });

    });
  </script>
</body>

</html>