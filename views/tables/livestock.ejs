<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Carnivault - Livestock</title>

    <script src="https://cdn.jsdelivr.net/npm/date-fns@3/cdn.min.js"></script>
  </head>
  <body>
    <div class="flex flex-1">
      <%- include("../partials/sidebar") %>
      <main class="flex-1 p-10 overflow-y-auto bg-background">
        <h1 class="text-2xl font-bold text-foreground mb-6 tracking-tight">
          Livestock
        </h1>
        <!-- prettier-ignore -->
        <%- include("../partials/searchbar", { placeholder: "Search livestock..." }) %>
        
        <%- include("../partials/table-skeleton", { id: "table-skeleton"}) %>
        <div class="overflow-x-auto">
          <table id="livestock-table" class="hidden">
            <thead>
              <tr>
                <th>Livestock ID</th>
                <th>Breed</th>
                <th>Weight</th>
                <th>Age</th>
                <th>Country of Origin</th>
                <th>Medical Condition</th>
                <th>Vaccination Status</th>
                <th>Date Arrived</th>
                <th>Storage Location</th>
                <th>Supplier ID</th>
                <th>Status</th>
                <th>Processing Date</th>
              </tr>
            </thead>
            <tbody id="livestock-table-body"></tbody>
          </table>
        </div>
        <!-- prettier-ignore -->
        <%- include("../partials/table-data-zero", { id: "table-data-zero", description: "Livestock data not available..."}) %>
      </main>
    </div>

    <script>
      document.addEventListener("DOMContentLoaded", async () => {
        const { format, parseISO } = dateFns;

        const tableSkeleton = document.getElementById("table-skeleton");
        const table = document.getElementById("livestock-table");
        const tableDataZeroLabel = document.getElementById("table-data-zero");
        const tableBody = document.getElementById("livestock-table-body");

        if (!tableSkeleton || !table || !tableDataZeroLabel || !tableBody) {
          console.error("A required table element is missing!");
          return;
        }

        try {
          const response = await fetch("/api/livestock");
          const data = await response.json();

          // hide skeleton and show table after data load
          tableSkeleton.classList.add("hidden");
          table.classList.replace("hidden", "table");

          // show message and hide table when data is empty
          if (data.length === 0) {
            table.classList.replace("table", "hidden");
            tableDataZeroLabel.classList.replace("hidden", "flex");
            return;
          }

          // append data to inner html
          let html = "";
          data.forEach((livestock) => {
            const formattedArrived = livestock.date_arrived
              ? format(parseISO(livestock.date_arrived), "MMM dd, yyyy")
              : "-/-";

            const formattedProcessing = livestock.processing_date
              ? format(parseISO(livestock.processing_date), "MMM dd, yyyy")
              : "-/-";

            html += `
              <tr>
                <td>${livestock.livestock_id}</td>
                <td>${livestock.breed}</td>
                <td>${livestock.weight}</td>
                <td>${livestock.age}</td>
                <td>${livestock.country_of_origin}</td>
                <td>${livestock.medical_condition}</td>
                <td>${livestock.vaccination_status}</td>
                <td>${formattedArrived}</td>
                <td>${livestock.storage_location}</td>
                <td>${livestock.supplier_id}</td>
                <td>${livestock.status}</td>
                <td>${formattedProcessing}</td>
              </tr>
            `;
          });
          tableBody.innerHTML = html;
        } catch (error) {
          console.error("Error fetching livestock data:", error);
          table.classList.replace("table", "hidden");
          tableDataZeroLabel.classList.replace("hidden", "flex");
        }
      });
    </script>
  </body>
</html>
