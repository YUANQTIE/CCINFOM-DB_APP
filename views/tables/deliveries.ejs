<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Carnivault - Deliveries</title>
  <script src="https://cdn.jsdelivr.net/npm/date-fns@3/cdn.min.js"></script>
</head>

<body>
  <div class="flex flex-1">
    <%- include("../partials/sidebar") %>
      <main class="flex-1 p-10 overflow-y-auto bg-background">
        <div class="flex gap-4">
          <h1 class="text-2xl font-bold text-foreground mb-6 tracking-tight">
            Deliveries
          </h1>
        </div>
        <section class="flex flex-col gap-4">
          <section class="flex justify-between">
            <!-- prettier-ignore -->
            <%- include("../partials/searchbar", { label: "Deliveries" , select_id: "searchbarSelect" ,
              input_id: "searchbarInput" , placeholder: "Search deliveries..." , route_api: "deliveries" }) %>
          </section>
          <div class="overflow-x-auto">
            <%- include("../partials/table-skeleton", { id: "table-skeleton" }) %> <%- include("../partials/table", {
                id: "deliveries-table" }) %>
                <%- include('../partials/dialog-table', { dialogId: "delivery-items-dialog" , title: "Delivery Items" ,
                  description: "Items in this delivery." , containerId: "delivery-items-container" }) %>

          </div>
          <!-- prettier-ignore -->
          <%- include("../partials/table-data-zero", { id: "table-data-zero" ,
            description: "Deliveries data not available..." }) %>
        </section>
      </main>
  </div>

  <script src="/scripts/components/table.js" defer></script>
  <script src="/scripts/components/searchbar.js" defer></script>

  <script>
    document.addEventListener("DOMContentLoaded", async () => {
      const tableColumns = [
        "Delivery No.",
        "Driver Name",
        "Truck Number",
        "Deliver Date",
        "Order Date",
        "Distance Traveled",
        "Delivery Duration",
        "Restaurant Code",
        "Status",
      ];

      const buttons = {
        viewItemsBtn: {
          action: (event, rowData, rowIndex) => {
            console.log("View Items", rowData);
            openDeliveryItemsDialog(rowData.delivery_no);
          },
          icon: lucide.icons.List,
        },
      };

      initTable(
        tableColumns,
        "deliveries-table",
        "table-skeleton",
        "table-data-zero",
        "deliveries",
        buttons
      );

      // Init Search Bar
      initSearchBar(
        "searchbarSelect",
        "searchbarInput",
        "deliveries-table",
        "deliveries",
        tableColumns,
        buttons
      );
    });

    async function openDeliveryItemsDialog(deliveryNo) {
      const dialog = document.getElementById("delivery-items-dialog");
      const container = document.getElementById("delivery-items-container");

      container.innerHTML = "<p>Loading...</p>";

      try {
        const response = await fetch(`/api/deliveries/delivery-items/${deliveryNo}`);
        if (!response.ok) throw new Error("Failed to fetch delivery items");

        const items = await response.json();
        console.log(items)

        if (!Array.isArray(items) || items.length === 0) {
          container.innerHTML = "<p>No items found for this delivery.</p>";
        } else {
          const table = document.createElement("table");
          table.className = "w-full text-sm border-collapse";

          table.innerHTML = `
            <thead>
              <tr class="border-b font-semibold">
                <th class="p-2 text-left">Serial No</th>
                <th class="p-2 text-left">Cut Type</th>
                <th class="p-2 text-left">Weight (kg)</th>
              </tr>
            </thead>
            <tbody>
              ${items
              .map(
                (item) => `
                <tr class="border-b">
                  <td class="p-2">${item.serial_no}</td>
                  <td class="p-2">${item.cut_type}</td>
                  <td class="p-2">${item.weight}</td>
                </tr>
              `
              )
              .join("")}
            </tbody>
          `;

          container.innerHTML = "";
          container.appendChild(table);
        }
      } catch (err) {
        console.error(err);
        container.innerHTML = "<p class='text-red-500'>Error loading items.</p>";
      }

      dialog.showModal();
    }
  </script>
</body>

</html>