<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Carnivault - Clients</title>
    <script src="https://cdn.jsdelivr.net/npm/date-fns@3/cdn.min.js"></script>
  </head>
  <body>
    <div class="flex flex-1">
      <%- include("../partials/sidebar") %>
      <main class="flex-1 p-10 overflow-y-auto bg-background">
        <div class="flex gap-4">
          <h1 class="text-2xl font-bold text-foreground mb-6 tracking-tight">
            Clients
          </h1>
        </div>
        <section class="flex flex-col gap-4">
          <section class="flex justify-between">
            <!-- prettier-ignore -->
            <%- include("../partials/searchbar", { label: "Suppliers", select_id: "searchbar", placeholder: "Search clients..." }) %>
          </section>
          <div class="overflow-x-auto">
            <%- include("../partials/table-skeleton", { id: "table-skeleton"})
            %> <%- include("../partials/table", { id: "clients-table"}) %>
          </div>
          <!-- prettier-ignore -->
          <%- include("../partials/table-data-zero", { id: "table-data-zero", description: "Clients data not available..."}) %>
        </section>
      </main>
    </div>

    <script>
      const { format, parseISO } = dateFns;
      const initSearchBar = (columns) => {
        const searchBar = document.getElementById("searchbar");
        let html = "";
        html += "<option>All</option>";
        for (let column of columns) {
          html += `<option>${column}</option>`;
        }
        searchBar.innerHTML = html;
      };

      document.addEventListener("DOMContentLoaded", async () => {
        const tableColumns = [
          "Restaurant Code",
          "Client Name",
          "Restaurant Name",
          "Restaurant Type",
          "Restaurant Address",
          "Contact No.",
          "Email Address",
          "Year of Establishment",
        ];
        const tableSkeleton = document.getElementById("table-skeleton");
        const table = document.getElementById("clients-table");
        const tableDataZeroLabel = document.getElementById("table-data-zero");
        const tableBody = table.tBodies[0];
        const tableHeader = table.tHead;

        // Check elements
        if (!tableSkeleton || !table || !tableDataZeroLabel || !tableBody) {
          console.error("A required table element is missing!");
          return;
        }

        // Add columns to table header
        const columnFragment = document.createDocumentFragment();
        const row = columnFragment.appendChild(document.createElement("tr"));
        tableColumns.forEach((col) => {
          const cell = row.insertCell();
          cell.textContent = col;
          cell.classList.add("font-bold");
        });

        tableHeader.appendChild(columnFragment);

        // Init Search Bar
        initSearchBar(tableColumns);

        // Fetch from data
        try {
          const response = await fetch("/api/clients");
          const data = await response.json();

          // hide skeleton and show table after data load
          tableSkeleton.classList.add("hidden");
          table.classList.replace("hidden", "table");

          // show message and hide table when data is empty
          if (data.length === 0) {
            table.classList.replace("table", "hidden");
            tableDataZeroLabel.classList.replace("hidden", "flex");
            return;
          }

          const dataFragment = document.createDocumentFragment();
          data.forEach((client) => {
            const row = dataFragment.appendChild(document.createElement("tr"));
            row.insertCell().textContent = client.restaurant_code;
            row.insertCell().textContent = client.client_name;
            row.insertCell().textContent = client.restaurant_name;
            row.insertCell().textContent = client.restaurant_type;
            row.insertCell().textContent = client.restaurant_address;
            row.insertCell().textContent = client.contact_no;
            row.insertCell().textContent = client.email_address;
            row.insertCell().textContent = client.year_of_establishment;
          });

          tableBody.appendChild(dataFragment);
        } catch (error) {
          console.error("Error fetching clients data:", error);
          table.classList.replace("table", "hidden");
          tableDataZeroLabel.classList.replace("hidden", "flex");
        }
      });
    </script>
  </body>
</html>
